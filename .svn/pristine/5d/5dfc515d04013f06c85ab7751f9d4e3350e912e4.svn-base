<%@ page contentType="text/html;charset=UTF-8" %>
<%@ include file="/WEB-INF/views/include/taglib.jsp"%>
<html>
<head>
	<title>消息实体类列表</title>
	<meta name="decorator" content="default"/>
	<style type="text/css">
	.sort {
		color: #0663A2;
		cursor: pointer;
	}
	</style>
	<script type="text/javascript">
		$(document).ready(function() {
			
		});
		function page(n,s){
			$("#pageNo").val(n);
			$("#pageSize").val(s);
			$("#searchForm").submit();
        	return false;
        }
	</script>
</head>
<body>
	<ul class="nav nav-tabs">
		<li class="active"><a href="${ctx}/message/list">消息实体类列表</a></li>
		<shiro:hasPermission name="message:edit"><li><a href="${ctx}/message/form">消息实体类添加</a></li></shiro:hasPermission>
	</ul>
	<form:form id="searchForm" modelAttribute="message" action="${ctx}/message/list" method="post" class="breadcrumb form-search">
		<input id="pageNo" name="pageNo" type="hidden" value="${page.pageNo}"/>
		<input id="pageSize" name="pageSize" type="hidden" value="${page.pageSize}"/>
		<label>备注 ：</label><form:input path="remarks" htmlEscape="false" maxlength="50" class="input-small"/>
		&nbsp;<input id="btnSubmit" class="btn btn-primary" type="submit" value="查询"/>
	</form:form>
	<tags:message content="${message}"/>
	<table id="contentTable" class="table table-striped table-bordered table-condensed">
		<thead><tr><th>创建时间</th><th>备注</th><shiro:hasPermission name="message:edit"><th>操作</th></shiro:hasPermission></tr></thead>
		<tbody>
		<c:forEach items="${page.list}" var="message">
			<tr>
				<td><fmt:formatDate value="${message.createDate}" pattern="yyyy-MM-dd"/></td>
				<td>${message.remarks}</td>
				<shiro:hasPermission name="message:edit"><td>
    				<a href="${ctx}/message/form?id=${message.id}">修改</a>
					<a href="${ctx}/message/delete?id=${message.id}" onclick="return confirmx('确认要删除该消息实体类吗？', this.href)">删除</a>
				</td></shiro:hasPermission>
			</tr>
		</c:forEach>
		</tbody>
	</table>
	<div class="pagination">${page}</div>
</body>
</html>
