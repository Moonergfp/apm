package apm.modules.message.dao;

import java.util.Date;
import java.util.List; 

import apm.common.core.Dao;
import apm.common.core.DaoImpl;
import apm.common.core.JpaDao;

import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;

import apm.modules.message.entity.PublishMessage;


/**
 * 发布 消息实体类DAO接口
 * @author gfp
 * @version 2015-09-08
 */
@Repository
public interface PublishMessageDao extends  PublishMessageDaoCustom, JpaDao<PublishMessage> {
	
	//查找所有发布 消息实体类(未删除)的记录
	@Query("from PublishMessage where delFlag = '" + PublishMessage.DEL_FLAG_NORMAL + "'")
	public List<PublishMessage> findAll();	
	
	//删除发布 消息实体类信息：逻辑删除 、通过ID号删除
	@Modifying
	@Query("update PublishMessage set delFlag='" + PublishMessage.DEL_FLAG_DELETE + "' where id = ?1")
	public int deleteById(String id);
	
}

/**
 * 发布 消息实体类DAO 自定义接口
 * @author gfp
 * @version 2015-09-08
 */
interface PublishMessageDaoCustom extends Dao<PublishMessage> {

}

/**
 * 发布 消息实体类DAO 自定义接口实现
 * @author gfp
 * @version 2015-09-08
 */
@Repository
class PublishMessageDaoImpl extends DaoImpl<PublishMessage> implements PublishMessageDaoCustom {
	
	//用于自定义实现数据库查询方法
	@PersistenceContext
