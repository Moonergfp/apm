.combox_border{position: relative;outline: none;margin-bottom: 0;vertical-align: middle;display: inline-block;}
.combox_border .combox_input{
	width: 84%;padding-left:4%;padding-right:12%;color: #555;vertical-align: middle;
    background-color: #fff;background-image: none;border: 1px solid #ccc;
    margin:0;
}
.combox_border .combox_btn{
	position: absolute;
	right: 0;
	top: 5px;
	cursor: pointer;
}

.combox_border .combox_select{
	display: none;
	width: 93%;
	max-height:300px;
	overflow: visible;
	list-style-type:none;margin:0;padding-left:0;
	border: 1px solid #ccc;
	border-top: 0;
	background-color: #fff;
	padding-left: 5px;
	padding-right: 5px;
	position:absolute;
}

.combox_border .combox_select li{
	overflow:hidden;height:20px;cursor:pointer;font-size:12px;margin:0;margin-top: 5px;margin-bottom: 5px;text-align: left;
}

.combox_border .combox_select a{
	text-decoration: none;
	color: #000000;
	display: block;
	padding-left: 3px;
    clear: both;
    font-weight: normal;
    line-height: 20px;
    color: #333;
    white-space: nowrap;}
.itemImg {
	width: 16px;
	height: 16px;
	border-radius: 50%;
	margin-right: 5px;
}
.combox_border .combox_select .li-active a{background-color: #0081c2;color: #fff;}
.combox_border .combox_select .li-mouseover a{background-color: rgba(53,199,249,0.3);}